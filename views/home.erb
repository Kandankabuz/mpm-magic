
<div class="button"><a href="/auto_play" accesskey="a">Auto</a> </div>
<% if(params[:auto_play]) %>
<script>
  window.setTimeout(function(){
    window.location.href = "auto_play?auto_play=true" ;
  }, 1000);
</script>
<% end %>
<a href="/next">Next</a>
<a href="/end">End</a>
<a href="/draw">Draw</a>
<% if !params[:auto_play] %>
<div class="button"><a href="/auto_play?auto_play=true" accesskey="+">Auto +</a> </div>
<% else %>
<div class="button"><a href="/" accesskey="+">Stop</a> </div>
<% end %>

<%= erb :_player, locals: {player: @world.p1 }%>
<hr/>

<div id="kingdom">
  <% @world.current_player.creatures.sort_by(&:name).sort_by(&:cost).reverse.each  do |card| %>
      <%= erb :_card, locals: {card: card }%>
  <% end %>
  <br>
  <br>
  <% @world.current_player.lands.sort_by(&:name).each  do |card| %>
      <%= erb :_card, locals: {card: card }%>
  <% end %>
</div>


<% if $world.turn.phase.is_a?(Combat) && $world.current_player.creatures.select { |c| c.can? (Attack) }.size!= 0 %>
  <div id="attack_all" class="button">
    <a href="/attack_all">Attack with All!<a>
  </div>
<% end %>

<div id="deck">
  <a href="/draw">
    <%= erb :_deck, locals: {deck: @world.p1.deck }%>
  </a>
</div>

<div id="hand">
  <%= erb :_hand, locals: {hand: @world.p1.hand }%>
</div>

<div id="turn">
  <%= erb :_turn, locals: {turn: @world.turn }%>
</div>
